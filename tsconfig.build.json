{
	"exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
	"extends": "./tsconfig.json",
	"assets": ["**/*.proto"],
	"watchAssets": true,
	"compilerOptions": {
		"inlineSources": true,
		// Set `sourceRoot` to  "/" to strip the build path prefix
		// from generated source code references.
		// This improves issue grouping in Sentry.
		"sourceRoot": "/"
	}
}
