{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"assets": ["**/*.proto"],
		"watchAssets": true,

		"deleteOutDir": true,
		"builder": {
			"type": "swc",
			"options": {
				"swcrcPath": "env.d/conf.d/.swcrc"
			}
		},
		"typeCheck": true
	}
}
